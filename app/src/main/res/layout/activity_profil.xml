<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfilActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.25"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="239dp"
        tools:layout_editor_absoluteY="0dp" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ws.wolfsoft.livo.MainActivity">


        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="25dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profil_activity_bg_profil" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:orientation="horizontal"
                android:padding="16dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Profil"
                    android:textColor="#fff"
                    android:textSize="20dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <!--<ImageView-->
                        <!--android:layout_weight="1"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="50dp"-->
                        <!---->
                        <!--android:layout_gravity="center"-->
                        <!--android:gravity="bottom"-->

                        <!--/>-->

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="6dp"
                            app:srcCompat="@drawable/ic_monetization_on_white" />

                        <TextView
                            android:id="@+id/tvSaldo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"

                            android:paddingLeft="2dp"
                            android:text="Rp 50.000,-"
                            android:textColor="#85ffffff"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivFoto"
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:gravity="bottom"
                        android:src="@drawable/userimg"

                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <!--<ImageView-->
                        <!--android:visibility="invisible"-->
                        <!--android:layout_weight="1"-->
                        <!--android:layout_width="50dp"-->
                        <!--android:layout_height="50dp"-->
                        <!--android:src="@drawable/logo_app"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:gravity="bottom"-->

                        <!--/>-->


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/ic_edit_user_white" />

                        <TextView
                            android:id="@+id/signup1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="2dp"
                            android:text="Edit Profil"

                            android:textColor="#85ffffff"
                            android:textSize="12dp" />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/username"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="left"

                        android:padding="16dp"
                        android:text="NIK"
                        android:textColor="#a2a1b8" />


                    <TextView
                        android:id="@+id/tvNik"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="right"
                        android:hint="Jay patel"

                        android:padding="16dp"
                        android:textColor="#181737"
                        android:textColorHint="#181737" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dad8d8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/password"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="left"

                        android:padding="16dp"
                        android:text="Nama"
                        android:textColor="#a2a1b8" />

                    <TextView
                        android:id="@+id/tvNama"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="right"
                        android:hint="Radinal Dwiki N"

                        android:padding="16dp"
                        android:textColor="#181737"
                        android:textColorHint="#1b193b" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dad8d8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/ttl"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="left"

                        android:padding="16dp"
                        android:text="TTL"
                        android:textColor="#a2a1b8" />

                    <TextView
                        android:id="@+id/tvTtl"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="right"
                        android:hint="Rengat, 29-11-1996"

                        android:padding="16dp"
                        android:textColor="#181737"
                        android:textColorHint="#1b193b" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dad8d8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/jk"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="left"

                        android:padding="16dp"
                        android:text="Jenis Kelamin"
                        android:textColor="#a2a1b8" />

                    <TextView
                        android:id="@+id/tvJk"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="right"
                        android:hint="Laki-Laki"

                        android:padding="16dp"
                        android:textColor="#181737"
                        android:textColorHint="#1b193b" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dad8d8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/alamat"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="left"

                        android:padding="16dp"
                        android:text="Alamat"
                        android:textColor="#a2a1b8" />

                    <TextView
                        android:id="@+id/tvAlamat"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="right"
                        android:hint="Jl. HR Subrantas"

                        android:padding="16dp"
                        android:textColor="#181737"
                        android:textColorHint="#1b193b" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dad8d8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/agama"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="left"

                        android:padding="16dp"
                        android:text="Agama"
                        android:textColor="#a2a1b8" />

                    <TextView
                        android:id="@+id/tvAgama"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="right"
                        android:hint="Islam"

                        android:padding="16dp"
                        android:textColor="#181737"
                        android:textColorHint="#1b193b" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dad8d8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/status_kawin"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="left"

                        android:padding="16dp"
                        android:text="Status Kawin"
                        android:textColor="#a2a1b8" />

                    <TextView
                        android:id="@+id/tvStatusKawin"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="right"
                        android:hint="Belum Kawin"

                        android:padding="16dp"
                        android:textColor="#181737"
                        android:textColorHint="#1b193b" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dad8d8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/pekerjaan"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="left"

                        android:padding="16dp"
                        android:text="Pekerjaan"
                        android:textColor="#a2a1b8" />

                    <TextView
                        android:id="@+id/tvPekerjaan"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="right"
                        android:hint="Developer"

                        android:padding="16dp"
                        android:textColor="#181737"
                        android:textColorHint="#1b193b" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dad8d8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/kewarganegaraan"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="left"

                        android:padding="16dp"
                        android:text="Kewarganegaraan"
                        android:textColor="#a2a1b8" />

                    <TextView
                        android:id="@+id/tvKewarganegaraan"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="right"
                        android:hint="WNI"

                        android:padding="16dp"
                        android:textColor="#181737"
                        android:textColorHint="#1b193b" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/no_hp"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="left"

                        android:padding="16dp"
                        android:text="No HP"
                        android:textColor="#a2a1b8" />

                    <TextView
                        android:id="@+id/tvNoHp"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:gravity="right"
                        android:hint="081234567890"

                        android:padding="16dp"
                        android:textColor="#181737"
                        android:textColorHint="#1b193b" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </RelativeLayout>


</RelativeLayout>
